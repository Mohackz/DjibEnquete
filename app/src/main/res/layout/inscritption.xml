<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"

    tools:context=".inscriptionActivity">


    <RelativeLayout
        android:id="@+id/h2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo__7_" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="555dp"
        android:layout_marginTop="80dp"

        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h2"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp">

        <EditText
            android:id="@+id/editTextLogin"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_person_outline_24"
            android:hint="Identifiant"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_email_24"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/white"
            android:textColor="@color/white"

            />

        <EditText
            android:id="@+id/editTextAdresse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_home_24"
            android:hint="Adresse"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextNom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Nom"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>
        <EditText
            android:id="@+id/editTextPrenom"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/baseline_person_24"
            android:hint="Prenom"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/editTextMotDePasse"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="Mot de passe"
            android:inputType="textVisiblePassword"
            android:textColorHint="@color/white"
            android:textColor="@color/white"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnConnecter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:text="S'inscrire'"
            android:textColor="@color/black" />



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>