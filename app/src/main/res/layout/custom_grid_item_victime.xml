<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/baseline_add_a_photo_24"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewLabelPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prenom: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewPrenom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prenom de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewLabelNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewNom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nom de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewLabelAdresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewAdresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adresse de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewLabelDateNaissance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de naissance: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewDateNaissance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date de naissance de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textViewLabelTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewTelephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telephone de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="start"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewLabelCni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNI: "
                android:layout_gravity="start"
                android:paddingTop="8dp"/>
            <TextView
                android:id="@+id/textViewCni"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CNI de la victime"
                android:paddingTop="8dp"/>
        </LinearLayout>



    </LinearLayout>
</LinearLayout>