<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbg"
    android:orientation="vertical"
    >
    <ImageView
        android:id="@+id/image"
        android:layout_alignBottom="@+id/connexion"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:src="@drawable/logo__7_"
        android:layout_gravity="center"
        />


    <TextView
        android:id="@+id/connexion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=" Connexion "
        android:textColor="@color/white"
        android:textSize="35dp"

        />



    <EditText
        android:id="@+id/editTextLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connexion"
        android:layout_marginTop="53dp"
        android:layout_marginBottom="30dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:drawablePadding="20dp"
        android:hint="Identifiant"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <EditText
        android:id="@+id/editTextMotDePasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextLogin"
        android:layout_margin="0dp"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="11dp"

        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:drawablePadding="20dp"
        android:hint="Mot de passe"
        android:padding="20dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/connecter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/white"
        android:onClick="connexion"
        android:text="Se connecter"
        android:textColor="@color/black" />


</LinearLayout>